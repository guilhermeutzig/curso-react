[data-component='banner']
    display block
    background-size cover
    background-position center center
    padding-top 100px
    padding-bottom 120px

    h2
        font-size 36px
        color white
        font-weight 500
        text-transform uppercase
        margin-top 0
        margin-bottom 15px
        font-family 'Open Sans'
        &.red
            color red
    
    p
        margin-top 0
        margin-bottom 15px
        color white 
        font-family 'Open Sans'
        &.desc-hidden
            opacity 0
    
    a
        margin-right 15px
        &:last-child
            margin 0