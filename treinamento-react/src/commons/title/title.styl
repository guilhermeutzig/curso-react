[data-component='title']
    display block
    font-size 36px
    color #292f36
    margin-top 0
    margin-bottom 30px
    font-family 'Open Sans'
    font-weight 400
    text-transform uppercase
    padding-left 25px
    position relative
    &::before
        content ''
        width 8px
        height 100%
        background-color #dddddd
        position absolute
        left 0
        top 0