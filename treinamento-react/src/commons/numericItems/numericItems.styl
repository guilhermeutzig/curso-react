[data-component='numeric-items']
    display block
    position relative
    padding-left 85px

    .number
        position absolute
        left 0
        top 0
        padding 15px 24px
        background-color #23b7a4
        font-size 20px
        color white
        font-family 'Open Sans'

    .title
        font-size 18px
        color #292f36
        margin-top 0
        margin-bottom 10px
        text-transform uppercase
    
    .text
        margin-bottom 0